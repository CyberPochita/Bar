<Window x:Class="Bar.Menues.DialogWindows.DeleteOrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bar.Menues.DialogWindows"
        mc:Ignorable="d"
        Title="DeleteOrderDialog" Height="758" Width="1448" Background="#484848">
    <Grid>
        <Grid>
            <Border x:Name="ContainerOrders" Background="#595959" Width="1300" Height="389" CornerRadius="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="21, 21, 21, 0">
                <Grid x:Name="GridOrders" Margin="21,21,21,21">

                </Grid>
            </Border>
        </Grid>
        <Grid>
            <Border x:Name="ContainerNumberTables" Background="#595959" Width="808" Height="306" CornerRadius="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 21, 12">
                <Grid>
                    <Button x:Name="DeleteButton" Content="Удалить" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="92, 0, 0, 0" Width="262" Height="86" FontSize="36" Background="#412F2F" Foreground="#FF7D7D7D" Click="DeleteButton_Click">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="CancelButton" Content="Отмена" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 0, 92, 0" Width="262" Height="86" FontSize="36" Background="#242424" Foreground="#FF7D7D7D" Click="CancelButton_Click">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
