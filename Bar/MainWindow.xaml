<Window x:Class="Bar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bar"
        mc:Ignorable="d"
        Title="Bar" Height="1080" Width="1920">

    <Window.Background>
        <ImageBrush ImageSource="Images/background-auth.png" />
    </Window.Background>
    <Grid>
        <Grid>
            <TextBox x:Name="textBox1" HorizontalAlignment="Left" Padding="12, 10, 0, 0" BorderThickness="0" Margin="736,382,0,0" VerticalAlignment="Top" Width="447" Height="54" FontSize="24" Background="#2E2E2E" Foreground="#5C5C5C" TextChanged="TextBox_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                    </Style>
                </TextBox.Resources>
                <TextBox.SelectionBrush>
                    <SolidColorBrush Color="#FF0078D7" Opacity="0"/>
                </TextBox.SelectionBrush>
            </TextBox>
            <TextBlock x:Name="placeholder" Text="Имя" Foreground="#5C5C5C" VerticalAlignment="Top" Margin="750,392,750,0" IsHitTestVisible="False" FontSize="24" />
        </Grid>

        <Grid>
            <TextBox x:Name="textBox2" HorizontalAlignment="Left" Padding="12, 10, 0, 0" BorderThickness="0" Margin="736,455,0,0" VerticalAlignment="Top" Width="447" Height="54" FontSize="24" Background="#2E2E2E" Foreground="#5C5C5C" TextChanged="textBox2_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                    </Style>
                </TextBox.Resources>
                <TextBox.SelectionBrush>
                    <SolidColorBrush Color="#FF0078D7" Opacity="0"/>
                </TextBox.SelectionBrush>
            </TextBox>
            <TextBlock x:Name="placeholder2" Text="Фамилия" Foreground="#5C5C5C" VerticalAlignment="Top" Margin="748,467,745,0" IsHitTestVisible="False" FontSize="24" />
        </Grid>

        <Grid>
            <TextBox x:Name="textBox3" HorizontalAlignment="Left" Padding="12, 10, 0, 0" BorderThickness="0" Margin="736,528,0,0"  VerticalAlignment="Top" Width="447" Height="54" FontSize="24" Background="#2E2E2E" Foreground="#5C5C5C" TextChanged="textBox3_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                    </Style>
                </TextBox.Resources>
                <TextBox.SelectionBrush>
                    <SolidColorBrush Color="#FF0078D7" Opacity="0"/>
                </TextBox.SelectionBrush>
            </TextBox>
            <TextBlock x:Name="placeholder3" Text="Отчетство" Foreground="#5C5C5C" VerticalAlignment="Top" Margin="748,540,750,0" IsHitTestVisible="False" FontSize="24" />
        </Grid>

        <Grid>
            <TextBox x:Name="textBox4" HorizontalAlignment="Left" Padding="12, 10, 0, 0" BorderThickness="0" Margin="736,643,0,0"  VerticalAlignment="Top" Width="447" Height="54" FontSize="24" Background="#2E2E2E" Foreground="#5C5C5C" TextChanged="textBox4_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                    </Style>
                </TextBox.Resources>
                <TextBox.SelectionBrush>
                    <SolidColorBrush Color="#FF0078D7" Opacity="0"/>
                </TextBox.SelectionBrush>
            </TextBox>
            <TextBlock x:Name="placeholder4" Text="Пароль" Foreground="#5C5C5C" VerticalAlignment="Top" Margin="748,655,750,0" IsHitTestVisible="False" FontSize="24" />
            <Button x:Name="Enter" Content="Войти" HorizontalAlignment="Left" Margin="849,800,0,0" VerticalAlignment="Top" Width="221" Height="48" FontSize="24" Background="#FFA7A7A7" Click="Enter_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
